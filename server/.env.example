# Backend Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Database Configuration (MySQL via XAMPP)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=ai_attendance

# Ollama Configuration (for local AI with DeepSeek)
# Ollama API endpoint (default: http://localhost:11434/api/chat)
OLLAMA_API_URL=http://localhost:11434/api/chat

# Note: Make sure Ollama is running and you've pulled the model:
# ollama serve
# ollama pull deepseek-v3.1:671b-cloud
